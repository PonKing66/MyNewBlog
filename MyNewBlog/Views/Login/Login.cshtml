@{
    Layout = null;
}
@model MyNewBlog.Models.User

<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../../favicon.ico">

    <title>Signin Template for Bootstrap</title>

    <link href="~/Content/bootstrap-4.3.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Custom styles for this template -->

    <link href="~/Content/signin.css" rel="stylesheet">

</head>

<body>

    <div class="container">

        @using (Html.BeginForm())
        {
            <div class="form-horizontal form-signin">
                @Html.AntiForgeryToken()
                <h2 class="form-signin-heading">管理员</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <label for="inputEmail" class="sr-only">Account</label>
                @Html.EditorFor(model => model.userAccount, new { htmlAttributes = new { @class = "form-control", @placeholder = "账号", @required = "", @autofocus = "" } })
                @Html.ValidationMessageFor(model => model.userAccount, "", new { @class = "text-danger" })


                <br/>

                <label for="inputPassword" class="sr-only">Password</label>
                @Html.EditorFor(model => model.userPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "密码", @required = "", @autofocus = "" } })
                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })


                @Html.CheckBoxFor(model => model.RememberMe)
                @Html.LabelFor(model => model.RememberMe)


                <a href="~/Login/create" class="glyphicon-text-color float-lg-right">注册</a>
                <button class="btn btn-lg btn-primary btn-block" style="width:auto" type="submit">登录</button>
            </div>

        }

    </div> <!-- /container -->

</body>

</html>