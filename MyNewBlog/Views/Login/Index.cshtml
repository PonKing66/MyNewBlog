@{
    Layout = null;
}
@model MyNewBlog.Models.User

<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Signin Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">


    <!-- Custom styles for this template -->
    <link href="~/Content/signin.css" rel="stylesheet">


</head>

<body>

    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">管理员</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="inputEmail" class="sr-only">Account</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @placeholder = "账号", @required = "", @autofocus = "" } })
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "密码", @required = "", @autofocus = "" } })
                    @Html.ValidationMessageFor(model => model.userName, "密码长度短", new { @class = "text-danger" })
                </div>
            </div>

            @Html.CheckBoxFor(model => model.RememberMe)
            @Html.LabelFor(model => model.RememberMe)
            <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
        }

    </div> <!-- /container -->


</body>

</html>