@using MyNewBlog.Models

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Home</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gafulungatie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/owl-carousel/css")
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
</head>
<body>

    <header class="main-header">
        <div class="zerogrid">
            <!--Top-->
            <div id="top">
                <div class="row">
                    <div class="col-2-3">
                        <ul class="list-inline top-link link">
                            <li><a href="~/Login/Index"><h3 style="color:white">登录</h3></a></li>
                        </ul>
                    </div>
                    <div class="col-1-3">
                        <div class="top-search">
                            <form id="form-container" action="" hidden="hidden">
                                <!--<input type="submit" id="searchsubmit" value="" />-->
                                <a class="search-submit-button" href="#">
                                    <i class="fa fa-search"></i>
                                </a>
                                <div id="searchtext">
                                    <input type="text" id="s" name="s" placeholder="Search">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="t-center">
                <a class="site-branding" href="~/Home/Index">
                    <img src="~/images/logo1.png" />
                </a>
                <div id='cssmenu' class="align-center">
                    <ul>
                        <li class="@(ViewBag.Title=="主页"?"active":"")">@Html.ActionLink("主页", "Index", "Home")</li>
                        <li class="@(ViewBag.Title=="资讯"?"active":"")">@Html.ActionLink("资讯", "Archives", "Home")</li>
                        <li class='last @(ViewBag.Title=="关于我们"?"active":"")'>@Html.ActionLink("关于我们", "About", "Home")</li>
                    </ul>
                </div>


            </div>
        </div>
    </header>
    <section id="container">
        @RenderBody()
    </section>

   
    @{ 
           
            NewsInformationEntities db = new NewsInformationEntities();
            var links = from c in db.Link
                           select c;
            var linkItems = links.ToList();
    }



    <footer>
        <div class="zerogrid wrap-footer">
            <div class="row">
                <div class="bottom-social center-block">
                    @{
                        foreach (var item in linkItems)
                        {
                            <a href="@item.url"><i class="fa fa-facebook"></i>@item.title</a>
                        }
                    }
                </div>
            </div>
            <div class="copyright">
                Copyright &copy;<p>&copy; @DateTime.Now.Year - Gafulungatie网站</p>
            </div>
        </div>

    </footer>


 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
