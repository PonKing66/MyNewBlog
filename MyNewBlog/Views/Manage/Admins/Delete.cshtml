@using MyNewBlog.Models

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Manage/_DashLayout.cshtml";
    Admin admin = ViewBag.Admin;
}


<h3>是否确定删除?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            用户名
        </dt>

        <dd>
            @Html.DisplayFor(model => admin.adminName)
        </dd>

        <dt>
            用户密码
        </dt>

        <dd>
            @Html.DisplayFor(model => admin.adminPassword)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-sm btn-danger" /> |
            @Html.ActionLink("返回列表", "Index","",new {@class="btn btn-primary btn-sm" })
        </div>
    }
</div>
