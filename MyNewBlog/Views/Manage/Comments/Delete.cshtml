@using MyNewBlog.Models;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Manage/_DashLayout.cshtml";
    Comment comment = ViewBag.comment;
}



<h3>是否确定删除?</h3>
<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>
            文章ID
        </dt>

        <dd>
            @Html.DisplayFor(model => comment.topicId)
        </dd>

        <dt>
            内容
        </dt>

        <dd>
            @Html.DisplayFor(model => comment.content)
        </dd>

        <dt>
            创建时间
        </dt>

        <dd>
            @Html.DisplayFor(model => comment.createTime)
        </dd>

        <dt>
            用户名
        </dt>

        <dd>
            @Html.DisplayFor(model => comment.userName)
        </dd>

        <dt>
            邮箱
        </dt>

        <dd>
            @Html.DisplayFor(model => comment.userEmail)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<div class="form-actions no-color">
    <input type="submit" value="删除" class="btn btn-sm btn-danger" /> |
    @Html.ActionLink("返回列表", "Index", "", new { @class = "btn btn-primary btn-sm" })
</div>
    }
</div>
