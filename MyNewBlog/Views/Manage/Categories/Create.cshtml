@using  MyNewBlog.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Manage/_DashLayout.cshtml";
    Category category = ViewBag.category;
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>创建分类</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">ID</label>
            <div class="col-md-10">
                @Html.EditorFor(model => category.id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => category.id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">分类名称</label>
            <div class="col-md-10">
                @Html.EditorFor(model => category.cateName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => category.cateName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-dark btn-sm" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index", "", new { @class = "btn btn-primary btn-sm" })
</div>
