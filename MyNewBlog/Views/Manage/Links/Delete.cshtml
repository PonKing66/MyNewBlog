

@using MyNewBlog.Models

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Manage/_DashLayout.cshtml";
    Link link = ViewBag.link;
}



<h3>是否确定删除?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            标题
        </dt>

        <dd>
            @Html.DisplayFor(model => link.title)
        </dd>

        <dt>
            链接
        </dt>

        <dd>
            @Html.DisplayFor(model => link.url)
        </dd>

        <dt>
            描述
        </dt>

        <dd>
            @Html.DisplayFor(model => link.desc)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<div class="form-actions no-color">
    <input type="submit" value="删除" class="btn btn-sm btn-danger" /> |
    @Html.ActionLink("返回列表", "Index", "", new { @class = "btn btn-primary btn-sm" })
</div>
    }
</div>
