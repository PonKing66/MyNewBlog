@model MyNewBlog.Models.Article


@{
    ViewBag.Title = "Details";
    MvcHtmlString mvcHtmlString = new MvcHtmlString(Model.description.ToString());
}





<div class="wrap-container">
    <article class="single-post zerogrid">
        <div class="row wrap-post">
            <div class="entry-header">
                <span class="time fa-calendar">@Model.date</span>
                <h1 class="entry-title text-center">
                    @Model.title
                </h1>
                <span class="@Model.link"><a href="#">@Model.author</a></a></span>
            </div>

            <div class="post-thumbnail-wrap">
                <img src="">
            </div>

            <div style="font-size:large" class="">
                @mvcHtmlString
            </div>

        </div>
    </article>



    <div class="row">
        <div class="container" style="min-width:50%">

            <div class="page-header center-block" style="min-width:50%">
                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" id="article_btn_comment" class="btn btn-primary">评论</button>
                </div>
            </div>
            <div class="panel-body container-fluid">
                <ul class="media-list list-group">
                    <li class="media list-group-item">
                        <div class="media">
                            <div class="media-left media">
                                <a href="#">
                                    <img class="media-object rounded-circle" src="~/images/header/2.jpg" style="width:25px" alt="...">
                                </a>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    面盲东&nbsp;
                                    <span class="label label-default">2019.12.12</span>
                                </h4>
                                我觉得还行
                            </div>
                        </div>

                    </li>

                    <li class="media list-group-item">


                        <div class="media-left">
                            <a href="#">
                                <img class="media-object rounded-circle" src="~/images/header/3.jpg" style="width:25px" alt="...">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    一亿小目标&nbsp;<span class="label label-default">
                                        2019.12.12
                                    </span>
                                </h4>
                                <p>我觉得还行</p>

                                <hr>
                                <div class="media">
                                    <div class="media-left">
                                        <a href="#">
                                            <img class="media-object rounded-circle" style="width:15px" src="~/images/header/0.jpg" alt="...">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <h5 class="media-heading">
                                            悔创阿里杰克马<span class="label label-default">
                                                2019.12.12
                                            </span>&nbsp;<span class="label label-info">回复</span>&nbsp;一亿小目标
                                        </h5>
                                        <p>我觉得还行</p>
                                    </div>
                                </div>

                                <hr>

                                <div class="media">
                                    <div class="media-left">
                                        <a href="#">
                                            <img class="media-object rounded-circle" style="width:15px" src="~/images/header/1.jpg" alt="...">
                                        </a>
                                    </div>
                                    <div class="media-body">

                                        <h5 class="media-heading">
                                            普通家庭马<span class="label label-default">2019.12.12</span>
                                            &nbsp;<span class="label label-info">回复</span>&nbsp;一亿小目标
                                        </h5>
                                        我觉得不行
                                    </div>
                                </div>
                            </div>
                        </div>


                    </li>

                </ul>
            </div>

            <hr>
        </div>

    </div>
</div>


<div class="modal fade" id="article_comment_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">添加文章</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Comment</label>
                        <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="article_add_btn" name="article_add_btn" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">


    //点击新增按钮，弹出一个模态框
    $("#article_btn_comment").click(
        function () {

            $("#article_comment_modal").modal({
                backdrop: "static"
            });
        });


    //点击编辑按钮，弹出模态框，对员工进行修改操作
    $(document).on("click", ".article_btn_comment", function () {


        $("#article_comment_modal").modal({
            backdrop: "static"
        });
    });
</script>
<script src="~/Scripts/jquery-3.3.1.js"></script>